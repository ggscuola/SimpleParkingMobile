            <TextView
                android:layout_width="@dimen/size_numero_posto"
                android:layout_height="@dimen/size_numero_posto"
                android:text="@string/terzo_posto"
                android:layout_gravity="bottom|end"
                android:background="@drawable/numero_posto"
                android:elevation="3dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_5"
        android:orientation="horizontal"
        android:baselineAligned="false">


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/posto_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size_height"
                android:background="@drawable/border"
                android:src="@mipmap/libero"
                android:contentDescription="@string/primo_piano" />


            <TextView
                android:layout_width="@dimen/size_numero_posto"
                android:layout_height="@dimen/size_numero_posto"
                android:text="@string/quarto_posto"
                android:layout_gravity="bottom|end"
                android:background="@drawable/numero_posto"
                android:elevation="3dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </FrameLayout>


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/posto_11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size_height"
                android:background="@drawable/border"
                android:src="@mipmap/libero"
                android:contentDescription="@string/primo_piano" />


            <TextView
                android:layout_width="@dimen/size_numero_posto"
                android:layout_height="@dimen/size_numero_posto"
                android:text="@string/quinto_posto"
                android:layout_gravity="bottom|end"
                android:background="@drawable/numero_posto"
                android:elevation="3dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </FrameLayout>


        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/posto_12"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size_height"
                android:background="@drawable/border"
                android:src="@mipmap/libero"
                android:contentDescription="@string/primo_piano" />


            <TextView
                android:layout_width="@dimen/size_numero_posto"
                android:layout_height="@dimen/size_numero_posto"
                android:text="@string/sesto_posto"
                android:layout_gravity="bottom|end"
                android:background="@drawable/numero_posto"
                android:elevation="3dp"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>

        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="@dimen/padding_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gruppo_sviluppo"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/force_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@android:drawable/stat_notify_sync"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal"/>
    </FrameLayout>


</LinearLayout>

