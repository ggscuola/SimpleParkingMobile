<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".CloseBookingActivity">

    <FrameLayout
        android:layout_width="@dimen/size_info_prenotazione_modal"
        android:layout_height="@dimen/size_info_prenotazione_modal"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/border_info_prenotazione"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_prenotazione"
            android:background="@drawable/border_info_prenotazione"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/cod_prenotazione"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/codice_prenotazione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="34sp"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_top_20"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="@string/piano_prenotato"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/piano_prenotato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="34sp"
                    android:textColor="@android:color/white"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_top_10"
                    android:textSize="20sp"
                    android:text="@string/posto_prenotato"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/posto_prenotato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="34sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>


            <Button
                android:id="@+id/chiudi_prenotazione"
                android:layout_marginTop="@dimen/margin_top_50"
                android:layout_marginEnd="@dimen/margin_top_20"
                android:layout_marginStart="@dimen/margin_top_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:text="@string/chiudi_prenotazione"/>



        </LinearLayout>




    </FrameLayout>


</FrameLayout>